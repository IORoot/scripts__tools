#!/bin/bash

# `brew info vagrant` for dependencies

brew list zsh 1>/dev/null                       || brew install zsh                                         # Dependencies: ncurses ✔, pcre ✔
brew list zsh-syntax-highlighting 1>/dev/null   || brew install zsh-syntax-highlighting                     #
brew list exa 1>/dev/null                       || brew install exa                                         # pandoc ✘, rust ✘
brew list git-crypt 1>/dev/null                 || brew install git-crypt                                   # openssl@1.1 ✘
brew list gnupg@1.4 1>/dev/null                 || brew install gnupg@1.4                                   # 
brew list jq 1>/dev/null                        || brew install jq                                          # oniguruma ✘
brew list terraform 1>/dev/null                 || brew install terraform                                   # go ✘
brew list wget 1>/dev/null                      || brew install wget                                        # gettext, libunistring, libidn2 ✘, openssl@1.1 ✔
brew list nmap 1>/dev/null                      || brew install nmap                                        # openssl@1.1 ✘ 
brew list nmap 1>/dev/null                      || brew install nmap                                        # openssl@1.1 ✘ 
brew list node 1>/dev/null                      || brew install node                                         # pkg-config ✘, python@3.9 ✘, brotli ✘, c-ares ✘, icu4c ✘, libuv ✘, nghttp2 ✘, openssl@1.1 ✔

# Casks
brew list --cask pe-client-tools  1>/dev/null   || brew install puppetlabs/puppet/pe-client-tools           # 
brew list --cask puppet-agent  1>/dev/null      || brew install puppetlabs/puppet/puppet-agent           # 
brew list --cask vagrant 1>/dev/null            || brew install vagrant                                     # 