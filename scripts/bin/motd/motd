    add_line_to_column2 SERVICES
    add_row_to_column2 APACHE       $APACHE
    add_row_to_column2 PHP          $PHP
    add_row_to_column2 MYSQL        $MYSQL
    add_row_to_column2 SSH          $SSH
fi 

